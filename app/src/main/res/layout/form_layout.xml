<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="16dp">


    <!-- Данные о пропавшем -->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Данные о пропавшем"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"/>

    <EditText
            android:id="@+id/editTextLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Фамилия пропавшего"/>

    <EditText
            android:id="@+id/editTextFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Имя пропавшего"/>

    <EditText
            android:id="@+id/editTextPatronymic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Отчество пропавшего"/>

    <EditText
            android:id="@+id/editTextFeatures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Приметы пропавшего"
            android:layout_marginTop="16dp"/>


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Дата рождения пропавшего"
            android:textStyle="normal"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:textSize="18sp"/>

    <DatePicker
            android:id="@+id/datePickerBirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            android:layout_marginTop="16dp"
    />


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Данные о заявителе"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"/>

    <EditText
            android:id="@+id/editTextApplicantLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Фамилия заявителя"
            android:layout_marginTop="8dp"/>

    <EditText
            android:id="@+id/editTextApplicantFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Имя заявителя"
            android:layout_marginTop="8dp"/>

    <EditText
            android:id="@+id/editTextApplicantPatronymic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Отчество заявителя"
            android:layout_marginTop="8dp"/>

<!--    </LinearLayout>-->

    <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Готово"/>

    <Button
            android:id="@+id/cancel_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Отмена"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="400dp"/>

</LinearLayout>
</ScrollView>
